{
  "name": "concept-lab",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "stop-docker-dev": "docker compose -f docker-compose.dev.yml down",
    "docker-dev": "docker compose -f docker-compose.dev.yml up postgres api-server",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "clean": "lerna clean && rm -rf node_modules"
  },
  "devDependencies": {
    "lerna": "^7.1.4"
  }
}
