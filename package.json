{
  "name": "concept-lab",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "stop-docker-dev": "docker compose -f docker-compose.dev.yml down",
    "docker-dev": "docker compose -f docker-compose.dev.yml up postgres api-server",
    "process-epub": "cd apps/api && tsx src/epub/preprocess-epub.ts",
    "clean-db": "docker exec concept-lab-postgres-1 psql -U postgres -d flipbook -c \"DELETE FROM documents;\"",
    "clean-epub": "rm -rf apps/api/src/epub/output/*",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "clean": "lerna clean && rm -rf node_modules"
  },
  "devDependencies": {
    "lerna": "^7.1.4"
  }
}
